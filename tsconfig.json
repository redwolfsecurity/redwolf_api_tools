{
    "compileOnSave": true,
    "compilerOptions": {
        "paths": {
            "*": [
              "types/*"
            ]
        },
        "outDir": "dist",
        "module": "commonjs",
        "types": [
           "node",
           "jquery",
           "jest"
        ],
        "strictNullChecks" : false,
        "inlineSourceMap": true,
	// Generate .d.ts files
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "removeComments": true,
        "target": "es2020",
        "baseUrl": "src",
        "typeRoots": ["node_modules/@types"],
        "lib": [
           "es2017",
           "dom"
        ]
    },
    "include": [
        "src/**/*",
	// "bin/*.ts",
        "test/*.ts",
        // "examples/*.ts",
    ],
    "exclude": [
       "test/*",
       "**/*.spec.ts",
       "**/*.test.ts"
  ]
}
